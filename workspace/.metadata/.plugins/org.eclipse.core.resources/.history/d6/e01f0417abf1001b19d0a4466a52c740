package in.ashokit.service;

import org.springframework.stereotype.Service;
import org.springframework.web.reactive.function.client.WebClient;

import reactor.core.publisher.Mono;

@Service
public class QuoteService {

	public Mono<String> invokeQuoteApi() {
		String apiUrl = "https://quoters.apps.pcfone.io/api/random";

		WebClient webClient = WebClient.create();

		Mono<String> bodyToMono = webClient.get().uri(apiUrl).retrieve().bodyToMono(String.class)
				.map(QuoteService::getQuote);

		return bodyToMono;

	}

	public static String getQuote(String quote) {
		return quote;
	}

}
